{% extends "kulupulang/base/base.jinja" %}
{% set title='dictionary' %}

{% block content %}
    <h2>dictionary</h2>
    {% if words %}
        <ul class="dictionary-index">
            {% for word in words %}
                <li>
                    <a class="dictionary-index-link" href="{{ url('dictionary.show', slug=word.slug) }}">{{ word }}</a>
                    · <span class="dictionary-index-pos">{{ word.pos }}</span>
                    · <span class="dictionary-index-definition">{{ word.definition }}</span>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>there are no words in the dictionary yet :(</p>
    {% endif %}
{% endblock %}