{% extends "kulupulang/base/base.jinja" %}

{% block content %}
    <div class="alert"><strong>note!</strong> this word hasn't baked yet, so this is just a draft.</div><br>
    <h2>{{ word.headword }}</h2>
    <strong>{{ word.get_pos_display() }}{% if word.cls %} · {{ word.get_cls_display() }}{% endif %}</strong>
    <p>{{ word.definition }}</p>
    {% if word.etymology %}
        <strong>etymology</strong>
        <p>{{ word.etymology }}</p>
    {% endif %}
    {% if word.notes %}
        <strong>notes</strong>
        <p>{{ word.notes }}</p>
    {% endif %}
    <p>
        this word is a part of <a href="{{ batch.get_absolute_url() }}">{{ batch.name }}</a>
        {% if has_edit_permission and word.editable %}
        ─ <a href="{{ url('word.edit', batch=batch.pk, word=word.pk) }}">edit</a>
        / <a href="{{ url('word.delete', batch=batch.pk, word=word.pk) }}">delete</a>
        {% endif %}
    </p>
{% endblock content %}