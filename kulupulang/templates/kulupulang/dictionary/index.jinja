{% extends "kulupulang/base/base.jinja" %}

{% block content %}
    <h2>dictionary</h2>
    <h3 class="m-top">roots</h3>
    {% if roots %}
        <ul>
            {% for root in roots %}
                <li><a href="{{ url('dictionary.show', slug=root.slug) }}">{{ root }}</a> · {{ root.gloss }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>there are no roots in the dictionary yet :(</p>
    {% endif %}
    <h3 class="m-top">words</h3>
    {% if words %}
        <ul>
            {% for word in words %}
                <li><a href="{{ url('dictionary.show', slug=word.slug) }}">{{ word }}</a> · {{ word.pos }} · {{ word.gloss }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>there are no words in the dictionary yet :(</p>
    {% endif %}
{% endblock %}