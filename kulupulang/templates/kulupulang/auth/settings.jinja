{% extends "kulupulang/base/base.jinja" %}
{% set title='settings' %}

{% block content %}
    <h2>settings</h2>
    <p>these are the settings for your account</p>
    {% if form.errors %}
        {% for error in form.errors %}
            <div class="alert">{{ error }}</div>
        {% endfor %}
    {% endif %}
    <form action="" method="POST">
        {% csrf_token %}
        {% for field in form %}
            {{ field.label_tag() }}
            <div class="field">
                {{ field }}
                {% if field.help_text %}<span class="help_text">{{ field.help_text }}</span>{% endif %}
            </div>
        {% endfor %}
        <div class="actions">
            <button type="submit">update</button>
        </div>
    </form>
{% endblock content %}