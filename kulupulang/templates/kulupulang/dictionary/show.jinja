{% extends "kulupulang/base/base.jinja" %}
{% set title=slug %}

{% block content %}
    {% for word in words %}
        <div class="dictionary-entry">
            <h1>{{ word.headword }}</h1>
            <strong>{{ word.get_pos_display() }}{% if word.cls %} Â· {{ word.get_cls_display() }}{% endif %}</strong>
            <p>{{ word.definition }}</p>
            {% if word.etymology %}
                <strong>etymology</strong>
                <p>{{ word.etymology }}</p>
            {% endif %}
            {% if word.notes %}
                <strong>notes</strong>
                <p>{{ word.notes }}</p>
            {% endif %}
            <p class="small">part of the batch <a href="{{ word.batch.get_absolute_url() }}">{{ word.batch.name }}</a></p>
        </div>
    {% endfor %}
{% endblock %}