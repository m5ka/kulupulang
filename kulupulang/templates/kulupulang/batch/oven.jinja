{% extends "kulupulang/base/base.jinja" %}
{% set title='oven' %}

{% block content %}
    <h2>oven</h2>
    <p>these are all the batches that are currently cooking. batches that were cooking but have been disputed are not shown here.</p>
    <ul>
        {% if batches %}
            {% for batch in batches %}
                <li>
                    <a href="{{ batch.get_absolute_url() }}">{{ batch.name }}</a>
                    {% if batch.description %}<br>{{ batch.description }}{% endif %}
                    <br><span class="small">finishes baking {{ batch.voting_end|naturaltime }}</span></li>
            {% endfor %}
        {% else %}
            <li>there are no batches in the oven right now</li>
        {% endif %}
    </ul>
{% endblock content %}